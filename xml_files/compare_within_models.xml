<tool id="compare_within_models" name="PanCancer compare_within_models" version="@VERSION@">
    <description>compare within models</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="stdio"/>
    <version_command><![CDATA['Rscript --vanilla /data/vijay/git/pancancer/scripts/compare_within_models.R' --version]]>
    </version_command>
    <command><![CDATA[
        cp -R '$pancan_summary.extra_files_path' '${output_alt_folder.extra_files_path}' 
        && 
        Rscript --vanilla /data/vijay/git/pancancer/scripts/compare_within_models.R
        --pancan_summary '${output_alt_folder.extra_files_path}'
        --within_dir '${output_alt_folder.extra_files_path}/within_disease'
        --alt_gene '${output_alt_folder.extra_files_path}'
        &&
        @OUTPUT_ALT_FOLDER_HTML@
        ]]>
    </command>
    <inputs>
        <param argument="--pancan_summary" label="pancancer summary folder data" name="pancan_summary" optional="false" type="data" format="html"/>
        <param argument="--within_dir" label="Classifier within folder data" name="within_dir" optional="false" type="data" format="html"/>
        <param argument="--alt_gene" label="alt_gene folder data" name="alt_gene" optional="true" type="data" format="html"/>
    </inputs>
    <outputs>
        <expand macro="output_alt_folder" />
    </outputs>
    <help><![CDATA[TODO: Write help]]></help>
</tool>